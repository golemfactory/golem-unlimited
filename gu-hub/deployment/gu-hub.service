[Unit]
Description=gu-hub
After=network.target

[Service]
User=golemu
Group=golemu
WorkingDirectory=/usr/lib/golemu
PermissionsStartOnly=true
ExecStartPre=/usr/bin/mkdir -p -m 755 /var/run/golemu
ExecStartPre=/usr/bin/chown golemu:golemu /var/run/golemu
ExecStart=/usr/bin/gu-hub server run

LimitNOFILE=150000
StandardOutput=syslog+console
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
